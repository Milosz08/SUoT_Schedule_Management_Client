{
  "editor.rulers": [120],
  "editor.detectIndentation": false,
  "editor.mouseWheelZoom": true,
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "all",
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,
  "workbench.tree.indent": 20,
  "files.insertFinalNewline": true,
  "psi-header.config": {
    "forceToTop": true,
    "blankLinesAfter": 1
  },
  "psi-header.changes-tracking": {
    "isActive": true,
    "autoHeader": "autoSave",
    "include": ["typescript", "scss", "html"],
    "exclude": ["json", "jsonl", "jsonc"],
    "excludeGlob": [".husky/**/*", "./src/index.html", ".vscode/**/*"],
    "enforceHeader": true
  },
  "psi-header.lang-config": [
    {
      "language": "html",
      "begin": "<!--",
      "prefix": " ~ ",
      "end": " -->",
      "lineLength": 64
    },
    {
      "language": "*",
      "begin": "/*",
      "prefix": " * ",
      "end": " */",
      "lineLength": 64
    }
  ],
  "psi-header.templates": [
    {
      "language": "*",
      "template": [
        "Copyright (c) <<year>> by Mi≈Çosz Gilga <https://miloszgilga.pl>",
        "Silesian University of Technology"
      ]
    }
  ]
}
